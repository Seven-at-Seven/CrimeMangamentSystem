<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="30" style="-fx-background-color: white; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sevenatseven.controllers.offiecer.util.display.OfficerProfileController">

    <!-- Header Label -->
    <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: black;" text="Police Officer Profile" />

    <!-- Officer Details -->
    <VBox maxWidth="Infinity" spacing="25" style="-fx-padding: 0 20 0 20;" VBox.vgrow="ALWAYS">

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="First Name:" />
            <TextField fx:id="firstName" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Last Name:" />
            <TextField fx:id="lastName" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Phone Number:" />
            <TextField fx:id="phoneNumber" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Email:" />
            <TextField fx:id="email" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Salary:" />
            <TextField fx:id="salary" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Rank:" />
            <TextField fx:id="rank" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox maxWidth="Infinity" spacing="15">
            <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Department ID:" />
            <TextField fx:id="departmentId" editable="false" style="-fx-background-color: white; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
        </HBox>

    </VBox>

    <!-- Navigation Button -->
    <Button onAction="#goToHome" style="-fx-font-size: 16; -fx-text-fill: black; -fx-background-color: white; -fx-border-color: black;" text="Back" VBox.vgrow="NEVER" />

</VBox>
